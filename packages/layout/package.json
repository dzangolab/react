  "dependencies": {
    "@dzangolab/react-config": "0.5.0",
    "@dzangolab/react-i18n": "0.5.0",
    "@dzangolab/react-ui": "0.5.0",
    "react": "18.2.0",
    "react-icons": "4.7.1"
  },
  "devDependencies": {
    "@testing-library/react": "13.4.0",
    "@types/jsdom": "20.0.0",
    "@types/node": "18.11.18",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "@types/react-test-renderer": "18.0.0",
    "@vitejs/plugin-react": "2.1.0",
    "@vitest/coverage-c8": "0.28.5",
    "eslint": "8.33.0",
    "eslint-config-custom": "0.5.0",
    "eslint-plugin-react": "7.32.2",
    "jsdom": "20.0.3",
    "prettier": "2.8.3",
    "react-test-renderer": "18.2.0",
    "tsconfig": "0.5.0",
    "typescript": "4.9.5",
    "vite": "3.2.5",
    "vitest": "0.28.5"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  }
}